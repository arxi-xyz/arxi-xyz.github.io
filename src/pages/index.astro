---
import Section from "../components/ui/Section.astro";
import { getCollection, getEntry } from "astro:content";
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../components/layout/BaseLayout.astro";
import ContentList from "../components/shared/ContentList.astro";
import Container from "../components/ui/Container.astro";

const siteConfig = await getEntry("site", "home");
if (!siteConfig) {
  throw new Error("Site configuration not found");
}

const site = siteConfig.data;

const formatDate = (date: Date | undefined) => {
  if (!date) return "";
  return date.toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
  });
};

const formatNumericDate = (date: Date | undefined) => {
  if (!date) return "";
  const month = String(date.getMonth() + 1).padStart(2, "0");
  const year = date.getFullYear();
  return `${month}/${year}`;
};

const posts = await getCollection("blog", ({ data }: CollectionEntry<"blog">) => {
  return import.meta.env.PROD ? !data.draft : true;
});
const latestPosts = posts
  .sort(
    (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
      b.data.publishedAt.getTime() - a.data.publishedAt.getTime()
  )
  .slice(0, 3);

const experiences = await getCollection("experience");
const sortedExperiences = experiences.sort(
  (a: CollectionEntry<"experience">, b: CollectionEntry<"experience">) => {
    // Current jobs first
    if (a.data.current && !b.data.current) return -1;
    if (!a.data.current && b.data.current) return 1;
    // Then by start date (newest first)
    return b.data.startDate.getTime() - a.data.startDate.getTime();
  }
);

const getTypeStyle = (type: string) => {
  const styles: Record<string, string> = {
    "full-time": "background: rgba(34, 197, 94, 0.15); color: rgb(134, 239, 172);",
    "part-time": "background: rgba(59, 130, 246, 0.15); color: rgb(147, 197, 253);",
    "contract": "background: rgba(249, 115, 22, 0.15); color: rgb(253, 186, 116);",
    "freelance": "background: rgba(168, 85, 247, 0.15); color: rgb(216, 180, 254);",
    "internship": "background: rgba(236, 72, 153, 0.15); color: rgb(249, 168, 212);",
  };
  return styles[type] || "background: rgba(255, 255, 255, 0.1); color: inherit;";
};
---

<BaseLayout title={`${site.name} - Portfolio`} description={site.introduction}>
  <Container>
    <section class="hero">
      <h1>{site.name}</h1>
      <p class="subtitle">{site.title}</p>
      <p class="introduction">{site.introduction}</p>
      {
        site.socialLinks && (
          <div class="social-links">
            {site.socialLinks.map(({ platform, url }) => (
              <a href={url} target="_blank" rel="noopener noreferrer">
                {platform}
              </a>
            ))}
          </div>
        )
      }
    </section>

    <section class="section">
      <div class="section-header">
        <h2>{site.sections.experience.title}</h2>
      </div>
      <div class="content-list">
        {
          sortedExperiences.map((exp) => (
            <article>
              <div class="exp-header">
                <div class="company-info">
                  <img src={exp.data.logo} alt="" class="company-logo" />
                  <span class="company-title">{exp.data.title}</span>
                </div>
                <div class="exp-meta">
                  {exp.data.type && (
                    <span class="employment-type" style={getTypeStyle(exp.data.type)}>{exp.data.type}</span>
                  )}
                  <time>
                    {formatNumericDate(exp.data.startDate)} - {exp.data.current ? "Present" : formatNumericDate(exp.data.endDate)}
                  </time>
                </div>
              </div>
              <p class="muted-text">{exp.data.description}</p>
              {exp.data.techs && (
                <div class="tags">
                  {exp.data.techs.map((tech) => (
                    <span>{tech}</span>
                  ))}
                </div>
              )}
            </article>
          ))
        }
      </div>
    </section>

    <Section>
      <div class="section-header">
        <h2>{site.sections.blog.title}</h2>
        <a href="/blog">{site.sections.blog.viewAllText}</a>
      </div>
      <ContentList>
        {
          latestPosts.map((post) => (
            <article>
              <div class="title-row">
                <a href={`/blog/${post.id}`}>{post.data.title}</a>
                {post.data.publishedAt && (
                  <time datetime={post.data.publishedAt.toISOString()}>{formatDate(post.data.publishedAt)}</time>
                )}
              </div>
              <p class="muted-text">{post.data.description}</p>
            </article>
          ))
        }
      </ContentList>
    </Section>
  </Container>
</BaseLayout>

<style>
  main {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero {
    padding: 2rem 0 1rem 0;
  }

  .introduction {
    margin: 1rem 0;
    opacity: 0.9;
  }

  .section {
    margin: 2rem 0;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 2rem;
    opacity: 0.7;
  }

  .content-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .content-list article {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .exp-header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .company-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .company-title {
    font-size: var(--text-sm);
    font-weight: 500;
  }

  .exp-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: var(--text-xs);
  }

  .company-logo {
    width: 1.5rem;
    height: 1.5rem;
    object-fit: contain;
  }

  time {
    font-size: var(--text-xs);
    opacity: 0.5;
    white-space: nowrap;
  }

  .employment-type {
    font-size: var(--text-xs);
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    font-weight: 500;
    text-transform: capitalize;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.25rem;
  }

  .tags span {
    font-size: var(--text-xs);
    background: rgba(255, 255, 255, 0.08);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    color: var(--text-muted);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  @media (max-width: 640px) {
    main {
      padding: 1rem 0;
    }

    .hero {
      padding: 3rem 0;
    }

    .container {
      padding: 0 1rem;
    }
  }
</style>
